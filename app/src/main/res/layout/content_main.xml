<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_animation_list"
    android:color="#ffc9c7"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".MainActivity"
    tools:showIn="@layout/activity_main"
    android:id="@+id/ConstraintLayout"
    tools:visibility="visible">

    <TextView
        android:id="@+id/textView"
        android:layout_width="192dp"
        android:layout_height="35dp"
        android:fontFamily="@font/archivo_black"
        android:text="Secret Santa!"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.513" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="207dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/nextBtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.503">

        <EditText
            android:id="@+id/nameOne"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#FFF5424B"
            android:ems="10"
            android:hint="Name"
            android:inputType="textPersonName"
            android:textColorHighlight="#90F86C73"
            android:textColorHint="#E1F5424B"
            android:textColorLink="#FFF5424B" />

        <EditText
            android:id="@+id/nameTwo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#FFF5424B"
            android:ems="10"
            android:hint="Name"
            android:inputType="textPersonName"
            android:textColorHint="#E1F5424B" />

        <EditText
            android:id="@+id/nameThree"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#FFF5424B"
            android:ems="10"
            android:hint="Name"
            android:inputType="textPersonName"
            android:textColorHint="#E1F5424B" />

        <EditText
            android:id="@+id/nameFour"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#FFF5424B"
            android:ems="10"
            android:hint="Name"
            android:inputType="textPersonName"
            android:textColorHint="#E1F5424B" />

        <EditText
            android:id="@+id/nameFive"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#FFF5424B"
            android:ems="10"
            android:hint="Name"
            android:inputType="textPersonName"
            android:textColorHint="#E1F5424B" />
    </LinearLayout>

    <Button
        android:id="@+id/nextBtn"
        android:layout_width="110dp"
        android:layout_height="61dp"
        android:layout_marginBottom="68dp"
        android:backgroundTint="#FFFFFF"
        android:fontFamily="@font/archivo_black"
        android:text="Next"
        android:textColor="#FFF5424B"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>